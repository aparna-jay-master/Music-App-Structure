<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.musicplayer.ArtistView">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="This activity gives more information about the specific artist. I would get the list of albums externally." />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="From this activity you can navigate to the Album page" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingBottom="16dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="8dp"
        android:src="@drawable/sarab" />

    <TextView
        android:id="@+id/sara_bareilles"
        style="@style/Headers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sara Bareilles"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        style="@style/Headers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Albums" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginBottom="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/blessed_unrest_album"
                style="@style/Images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/albumart" />

            <ImageView
                style="@style/Images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/waitress" />

            <ImageView
                style="@style/Images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/kheart" />

            <ImageView
                style="@style/Images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/littlevoice" />

        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/back_home_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back Home" />

</LinearLayout>
