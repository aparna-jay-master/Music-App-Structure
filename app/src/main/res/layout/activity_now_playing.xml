<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicplayer.NowPlaying"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/blessed_unrest_album_np"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/albumart"
        android:adjustViewBounds="true"
        android:paddingTop="16dp"
        android:paddingRight="64dp"
        android:paddingLeft="64dp"
        android:paddingBottom="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brave"
        android:textAlignment="center"
        android:textStyle="bold"
        style="@style/Headers"/>

    <TextView
        android:id="@+id/sara_bareilles_np"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sara Bareilles"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mediabuttons"
        android:layout_margin="16dp"/>

</LinearLayout>
