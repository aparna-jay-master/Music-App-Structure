<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.musicplayer.NowPlaying">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="This activity is the Now Playing screen where songs would be playing. The album art would come from an API along with the actual media file being played" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="In this activity you can go to the Artist Page and to the Album Page." />

    <ImageView
        android:id="@+id/blessed_unrest_album_np"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingBottom="16sp"
        android:paddingLeft="64dp"
        android:paddingRight="64dp"
        android:paddingTop="16dp"
        android:src="@drawable/albumart" />

    <TextView
        style="@style/Headers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Brave"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/sara_bareilles_np"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sara Bareilles"
        android:textAlignment="center" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/mediabuttons" />

</LinearLayout>
